          <img class="color_swatch" src="{{ colorSwatch | asset_img_url }}" width="25" height="25" loading="lazy">
        </a>
      {%- endfor -%}
    </div>
    <p class="product_price">{{ third_product.price | money }}</p>
    {%- if block.settings.third_product_title != blank -%}
      <div class="product_description">
        <p>{{ block.settings.third_product_title }}</p>
